<div class="container px-5 px-sm-0">


  <% if @book.errors.any? %>
    <%= @book.errors.count %> errors prohibited this book from being saved:
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>


  <div class="row">
  <!-- ユーザーの詳細 -->
  <div class="col-md-3 mt-3">

    <h2>User info</h2>
      <%= image_tag @user.get_profile_image(100,100) %>

    <table class="table">
      <tbody>
      <tr>
        <th>name</th>
        <th><%= @user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= @user.introduction %></th>
      </tr>
      </tbody>
    </table>

    <div class="row">
      <a class="btn btn-outline-secondary btn-block edit_user_id" href="/users/:id/edit">
        <i class="fas fa-user-cog"></i>
      </a>
    </div>


    <!-- 新規投稿 -->
    <h2 class="mt-3">New book</h2>

    <%= form_with model: @book, url: '/books', method: :post do |f| %>

    <div class="form-group">
      <label for="book_title">Title</label>
      <input class="form-control book_title" type="text" name="book[title]" id="book_title">
    </div>

    <div class="form-group">
      <label for="book_opinion">Opinion</label>
      <textarea class="form-control book_body" name="book[body]" id="book_body"></textarea>
    </div>

    <div class="form-group">
      <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
    </div>

    <% end %>
  </div>


  <div class="col-md-8 mt-3 offset-md-1">
    <h2>Books</h2>

  <!-- 全ユーザーの投稿一覧 -->
    <table class="table">
      <thead>
        <tr>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <!--　ここは特定のユーザーから投稿したものを引き出すのでbookでOK? -->
        <% @books.each do |book| %>
          <div>
            <%= link_to book.title, book_path(book.id) %>
            <%= book.body %>
          </div>
        <% end %>
      </tbody>
    </table>
  </div>

  </div>
</div>
