<div>
  <%= flash[:notice] %>
<div>

<div class="container px-5 px-sm-0">
  <div class="row">
  <!-- ユーザーの詳細 -->
  <div class="col-md-3 mt-3">
    <h2>User info</h2>
      <%= image_tag @user.get_profile_image(100,100) %>

    <table class="table">
      <tbody>
      <tr>
        <th>name</th>
        <th><%= @user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= @user.introduction %></th>
      </tr>
      </tbody>
    </table>

    <div class="row">
      <a class="btn btn-outline-secondary btn-block edit_user_id" href="/users/:id/edit">
        <i class="fas fa-user-cog"></i>
      </a>
    </div>


    <!-- 新規投稿 -->
    <h2 class="mt-3">New book</h2>

    <%= form_with model: @book, url: '/books', method: :post do |f| %>

    <div class="form-group">
      <label for="book_title">Title</label>
      <input class="form-control book_title" type="text" name="book[title]" id="book_title">
    </div>

    <div class="form-group">
      <label for="book_opinion">Opinion</label>
      <textarea class="form-control book_body" name="book[body]" id="book_body"></textarea>
    </div>

    <div class="form-group">
      <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
    </div>

    <% end %>
  </div>


  <div class="col-md-8 mt-3 offset-md-1">
    <h2>Book detail</h2>

  <!-- 指定したユーザーの投稿一覧 -->
    <table class="table">
      <!-- theadは無し -->
      <tbody>
        <!--　ここは特定のbookを呼び出す -->
        <td>
          <a href="/users/:id">
            <%= image_tag user.get_profile_image(80,80) %>
            <%= user.name, user_path(user.id) %>
          </a>
        </td>
        <td>
          <a>
            <%= link_to book.title, book_path(book.id) %>
          </a>
        </td>
        <td>
          <%= book.body %>
        </td>

        <td>
          <% if @book.user == current_user %>
            <a class="btn btn-success" href="/books/:id/edit" role="button">Edit</a>
          <% end %>
        </td>
        <td>
          <% if @book.user == current_user %>
            <a data-confilm="本当に消しますか？" class="btn btn-danger" rel="nofollow" data-method="delete" href="/books/:id" role="button">Destroy</a>
          <% end %>
        </td>
      </tbody>
    </table>
  </div>

  </div>
</div>
