<h1>User info</h1>

<% if @user.errors.any? %>
  <%= @user.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<%= form_with model: @user, url: update_user_path(@user.id), method: :patch do |f| %>

  <h4>Name</h4>
  <%= f.text_field :title %>

  <h4>Image</h4>
  <%= f.file_field :profile_image %>

  <h4>Introduction</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Update Book' %>

<% end %>
